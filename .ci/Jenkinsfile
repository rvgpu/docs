pipeline {
    agent {
        label 'docker'
    }

    stages {
        stage('Setup') {
            steps {
                echo 'Setup'
                sh "git clean -df"
                sh "make clean"
                sh "docker image build -t rvgpu/sphinx:latest .ci/"
            }
        }

        stage('Build Html') {
            steps {
                echo "Build docs on docker"
                sh "docker image build -t rvgpu/sphinx:latest ."
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploy html to github repos"
                dir ("_build/html/") {
                    sh 'touch .nojekyll'
                    sh 'git init'
                    sh 'git add . '
                    sh 'git commit -m "push to github pages"'
                    sh 'git remote add origin git@github.com:rvgpu/rvgpu.github.io.git'
                    sh 'git push origin main --force'
                }
                sh "make clean"
            }
        }
    }
}

